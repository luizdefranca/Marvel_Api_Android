<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/marvel_wallpaper"
    tools:context="com.example.android.marvelheroes.MainActivity"
    android:orientation="horizontal"
    android:textAlignment="gravity">

    <fragment
        android:id="@+id/fragment_character_list"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:name="com.example.android.marvelheroes.CharacterListFragment" />
    <FrameLayout
        android:id="@+id/content_character_detail"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>

</LinearLayout>
