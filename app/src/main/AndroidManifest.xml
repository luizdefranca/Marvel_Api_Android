<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.marvelheroes">

    <!-- Para acessar a internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Checar se hÃ¡ conexao disponivel -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CharacterDetail_old" />
        <activity
            android:name=".CharacterDetailActivity"
            android:label="@string/title_activity_character_detail"
            android:parentActivityName=".MainActivity"
            android:theme="@style/MyTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.marvelheroes.MainActivity" />
        </activity>
    </application>

</manifest>